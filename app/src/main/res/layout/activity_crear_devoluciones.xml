<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CrearDevolucionesActivity">

    <Spinner
        android:id="@+id/_crear_devoluciones_combo_clientes"
        android:layout_width="145dp"
        android:layout_height="31dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.296"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/_crear_devoluciones_combo_Articulos"
        android:layout_width="148dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.277"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/_crear_devoluciones_combo_clientes" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:text="Cliente"
        app:layout_constraintBottom_toBottomOf="@+id/_crear_devoluciones_combo_clientes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/_crear_devoluciones_combo_clientes"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:text="Articulo"
        app:layout_constraintBottom_toBottomOf="@+id/_crear_devoluciones_combo_Articulos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/_crear_devoluciones_combo_Articulos"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/_crear_devoluciones_editText_cantidad"
        android:layout_width="148dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/_crear_devoluciones_combo_Articulos" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:text="Cantidad"
        app:layout_constraintBottom_toBottomOf="@+id/_crear_devoluciones_editText_cantidad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/_crear_devoluciones_editText_cantidad"
        app:layout_constraintVertical_bias="0.333" />

    <Button
        android:id="@+id/_crear_devoluciones_btn_agregar"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/_crear_devoluciones_string_btn_agregar"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/_crear_devoluciones_editText_cantidad"
        app:layout_constraintStart_toStartOf="@+id/_crear_devoluciones_editText_cantidad"
        app:layout_constraintTop_toBottomOf="@+id/_crear_devoluciones_editText_cantidad" />

    <Button
        android:id="@+id/_crea_devoluciones_btn_guardar"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/_crear_devoluciones_string_btn_gurdar"
        app:layout_constraintEnd_toEndOf="@+id/_crear_devoluciones_btn_agregar"
        app:layout_constraintStart_toStartOf="@+id/_crear_devoluciones_btn_agregar"
        app:layout_constraintTop_toBottomOf="@+id/_crear_devoluciones_btn_agregar" />

    <ProgressBar
        android:id="@+id/_crear_devoluciones_progreso"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/_crea_devoluciones_btn_guardar" />
</androidx.constraintlayout.widget.ConstraintLayout>