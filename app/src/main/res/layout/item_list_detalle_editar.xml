<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">


       <TextView
           android:id="@+id/_item_lista_detalle_editar_codigo_DOCO"
           android:layout_width="1dp"
           android:layout_height="wrap_content"
           android:text="TextView"
           android:visibility="invisible" />
       <TextView
           android:id="@+id/_item_lista_detalle_editar_Migrado"
           android:layout_width="1dp"
           android:layout_height="wrap_content"
           android:text="TextView"
           android:visibility="invisible" />



       <EditText
           android:id="@+id/_item_lista_detalle_editar_codigo_articulo"
           android:layout_width="70dp"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           android:layout_marginStart="24dp"
           android:layout_marginTop="24dp"
           android:inputType="number"
           android:text="TextView"
           android:textAlignment="center"
           android:textSize="14sp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent" />

       <TextView
           android:id="@+id/_item_lista_detalle_editar_articulo"
           android:layout_width="150dp"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           android:layout_marginStart="36dp"
           android:layout_marginEnd="8dp"
           android:text="TextView"
           app:layout_constraintBottom_toBottomOf="@+id/_item_lista_detalle_editar_codigo_articulo"
           app:layout_constraintEnd_toStartOf="@+id/_item_lista_detalle_editar_cantidad"
           app:layout_constraintStart_toEndOf="@+id/_item_lista_detalle_editar_codigo_articulo"
           app:layout_constraintTop_toTopOf="@+id/_item_lista_detalle_editar_codigo_articulo" />

       <EditText
           android:id="@+id/_item_lista_detalle_editar_cantidad"
           android:layout_width="51dp"
           android:layout_height="wrap_content"
           android:layout_marginStart="8dp"
           android:layout_marginEnd="8dp"
           android:inputType="number"
           android:text="TextView"
           android:textAlignment="center"
           android:textSize="14sp"
           app:layout_constraintBottom_toBottomOf="@+id/_item_lista_detalle_editar_articulo"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toEndOf="@+id/_item_lista_detalle_editar_articulo"
           app:layout_constraintTop_toTopOf="@+id/_item_lista_detalle_editar_articulo"
           app:layout_constraintVertical_bias="0.523" />

       <TextView
           android:id="@+id/_item_lista_detalle_editar_id_devolucion"
           android:layout_width="10dp"
           android:layout_height="wrap_content"
           android:layout_marginStart="28dp"
           android:visibility="invisible"
           app:layout_constraintStart_toEndOf="@+id/_item_list_detalle_editar_btn_eliminar"
           tools:layout_editor_absoluteY="82dp" />

       <Button
           android:id="@+id/_item_list_detalle_editar_btn_actualizar"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="8dp"
           android:layout_marginTop="16dp"
           android:text="ACTUALIZAR"
           android:textSize="9.4dp"
           android:textStyle="bold"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/_item_lista_detalle_editar_codigo_articulo" />

       <Button
           android:id="@+id/_item_list_detalle_editar_btn_eliminar"
           android:layout_width="80dp"
           android:layout_height="wrap_content"
           android:layout_marginStart="12dp"
           android:text="ELIMINAR"
           android:textSize="9.4dp"
           android:textStyle="bold"
           app:layout_constraintStart_toEndOf="@+id/_item_list_detalle_editar_btn_actualizar"
           app:layout_constraintTop_toTopOf="@+id/_item_list_detalle_editar_btn_actualizar" />

       <Button
           android:id="@+id/_item_list_detalle_editar_btn_agregar"
           android:layout_width="80dp"
           android:layout_height="wrap_content"
           android:layout_marginStart="12dp"
           android:text="AGREGAR"
           android:textSize="9.4dp"
           android:textStyle="bold"
           app:layout_constraintStart_toEndOf="@+id/_item_list_detalle_editar_btn_eliminar"
           app:layout_constraintTop_toTopOf="@+id/_item_list_detalle_editar_btn_eliminar" />

       <View
           android:id="@+id/divider"
           android:layout_width="477dp"
           android:layout_height="1dp"
           android:layout_marginStart="2dp"
           android:layout_marginTop="16dp"
           android:layout_marginEnd="1dp"
           android:background="?android:attr/listDivider"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/_item_list_detalle_editar_btn_eliminar" />
   </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>